                                                            </Border>
                                                            <DockPanel HorizontalAlignment="Center" Margin="0,15,0,0">
                                                                <TextBlock Text="Bạn chưa có tài khoản?" FontSize="15" Foreground="#474747" FontWeight="DemiBold" HorizontalAlignment="Right"></TextBlock>
                                                                <Border Cursor="Hand" HorizontalAlignment="Right" Margin="5,0,0,0" x:Name="btnDangKyGo" Background="Transparent">
                                                                    <TextBlock  Text="Đăng ký ngay" FontSize="15" Foreground="#Ffa800" FontWeight="DemiBold"></TextBlock>
                                                                </Border>

                                                            </DockPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                        </Grid>
                                    </Grid>
                                </StackPanel>


                            </Grid>
                            
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Border Width="44" Height="44" CornerRadius="1000" Background="#616FDF" VerticalAlignment="Bottom" Margin="60,0,0,100" x:Name="btnDisplayFullSizebar" HorizontalAlignment="Left" MouseLeftButtonUp="btnDisplayFullSizebar_MouseLeftButtonUp" Visibility="Collapsed">
                <Path Data="{DynamicResource iconRight2}" Stroke="#ffffff" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Path>
