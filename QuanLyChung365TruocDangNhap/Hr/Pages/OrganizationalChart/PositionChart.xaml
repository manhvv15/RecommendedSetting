                    <!--x:Name="PositionChart"-->
                    <Grid Grid.Column="1">
                        <TextBlock  FontWeight="SemiBold" Cursor="Hand" Grid.Column="1" Text="SƠ ĐỒ CHỨC VỤ" FontSize="14" Foreground="{StaticResource #4C5BD4}" Margin="30,0,30,13" MouseLeftButtonDown="NavigateToPage"></TextBlock>
