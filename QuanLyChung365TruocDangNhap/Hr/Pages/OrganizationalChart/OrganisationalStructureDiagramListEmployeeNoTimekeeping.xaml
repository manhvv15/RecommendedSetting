        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,10">
            <ComboBox SelectedItem="{Binding COUNT_RECORD_PER_PAGE2}" x:Name="cbxPage" ItemsSource="{Binding Records}" Height="36" SelectedIndex="0" FontWeight="Bold" ItemContainerStyle="{StaticResource ComboboxItem1}" Cursor="Hand" SelectionChanged="select_pagani">
                <ComboBox.Style>
                    <Style TargetType="ComboBox" BasedOn="{StaticResource Combobox1}">
                    </Style>
                </ComboBox.Style>
            </ComboBox>
        </Grid>
    </Grid>
