                                                                <Grid Width="0.5" HorizontalAlignment="Right" Margin="0,4,0,4" Background="{StaticResource #CCCCCC}"></Grid>
                                                            </Grid>
                                                            <Grid Grid.Column="9">
                                                                <TextBlock Text="{Binding time_send_cv}" FontSize="15" FontWeight="DemiBold" Foreground="{StaticResource #474747}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                                <TextBlock Text="Chưa cập nhật" FontSize="15" FontWeight="DemiBold" Foreground="{StaticResource #474747}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding isTime}" Value="True">
                                                                                    <Setter Property="Visibility" Value="Collapsed"></Setter>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding isTime}" Value="False">
                                                                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style></TextBlock>
                                                                <Grid Width="0.5" HorizontalAlignment="Right" Margin="0,4,0,4" Background="{StaticResource #CCCCCC}"></Grid>
