                                                                    </Grid>
                                                                </Grid>
                                                                <Grid Width="0.5" HorizontalAlignment="Right" Margin="0,4,0,4" Background="{StaticResource #CCCCCC}"></Grid>
                                                            </Grid>
                                                            <Grid Grid.Column="3">
                                                                <TextBlock Text="{Binding cv_from}" FontSize="15" FontWeight="DemiBold" Foreground="{StaticResource #474747}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                                <Grid Width="0.5" HorizontalAlignment="Right" Margin="0,4,0,4" Background="{StaticResource #CCCCCC}"></Grid>
                                                            </Grid>
                                                            <Grid Grid.Column="4">
                                                                <TextBlock Text="{Binding name_position_apply}" FontSize="15" FontWeight="DemiBold" Foreground="{StaticResource #474747}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                                <Grid Width="0.5" HorizontalAlignment="Right" Margin="0,4,0,4" Background="{StaticResource #CCCCCC}"></Grid>
                                                            </Grid>
                                                            <Grid Grid.Column="5" Grid.ColumnSpan="2">
                                                                <TextBlock Text="{Binding recruitment_news_name}" FontSize="15" FontWeight="DemiBold" Foreground="{StaticResource #474747}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                                <Grid Width="0.5" HorizontalAlignment="Right" Margin="0,4,0,4" Background="{StaticResource #CCCCCC}"></Grid>
                                                            </Grid>
                                                            <Grid Grid.Column="7">
                                                                <TextBlock Text="{Binding recruitmen_id_full}" FontSize="15" FontWeight="DemiBold" Foreground="{StaticResource #474747}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                                <Grid Width="0.5" HorizontalAlignment="Right" Margin="0,4,0,4" Background="{StaticResource #CCCCCC}"></Grid>
                                                            </Grid>
                                                            <Grid Grid.Column="8">
                                                                <TextBlock Cursor="Hand" TextDecorations="Underline" MouseLeftButtonDown="ViewCVCandidate" Text="{Binding cv}" FontSize="15" FontWeight="DemiBold" Foreground="{StaticResource #27AE60}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                                <TextBlock Text="Chưa tải CV lên" FontSize="15" FontWeight="DemiBold" Foreground="{StaticResource #4C5BD4}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding isCv}" Value="True">
                                                                                    <Setter Property="Visibility" Value="Collapsed"></Setter>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding isCv}" Value="False">
                                                                                    <Setter Property="Visibility" Value="Visible"></Setter>
