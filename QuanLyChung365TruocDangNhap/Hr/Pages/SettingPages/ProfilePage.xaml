<Page x:Class="QuanLyChung365TruocDangNhap.Hr.Pages.SettingPages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.Hr.Pages.SettingPages"
      mc:Ignorable="d" 
      d:DesignHeight="1503" d:DesignWidth="988"
      Title="ProfilePage">

    <Page.Resources>
        <DropShadowEffect x:Key="z-depth1" BlurRadius="10" ShadowDepth="3" Direction="270" Color="#CCCCCC" />
    </Page.Resources>

    <Grid Margin="0,0,0,0">
        <Grid Margin="0,42,0,0">
            <ScrollViewer Margin="0,30,0,0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                <Grid>
                    <Grid Width="160" Height="160" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,58,0,0">
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="imageAvatar" ImageSource="../../Images/avatar_default.png" Stretch="UniformToFill"/>
                                <!--ImageSource="../Images/avatar_default.png"-->
                            </Ellipse.Fill>
                        </Ellipse>
                        <!--<Path Data="{StaticResource icon_camera}" Fill="#CCCCCC" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,22"></Path>-->
                    </Grid>
                    <TextBlock x:Name="tbName" FontSize="32" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,81,0,0" ></TextBlock>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,130,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Bộ phận: " FontSize="16" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                        <TextBlock Grid.Column="1" x:Name="tbDepName" FontSize="16" Foreground="#474747" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    </Grid>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,164,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Vị trí: " FontSize="16" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                        <TextBlock Grid.Column="1" x:Name="tbPosition" FontSize="16" Foreground="#474747" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    </Grid>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,198,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ID: " FontSize="16" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                        <TextBlock Grid.Column="1" x:Name="tbId" FontSize="16" Foreground="#474747" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    </Grid>
                    <Grid x:Name="editButton" Cursor="Hand" Width="131" Height="32" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,84,0,0" MouseLeftButtonDown="editButton_MouseLeftButtonDown">
                        <Border CornerRadius="10" BorderBrush="#4C5BD4" BorderThickness="2" Background="Transparent"></Border>
                        <TextBlock FontWeight="SemiBold" Text="{StaticResource edit}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="#4C5BD4"></TextBlock>
                    </Grid>
                    <StackPanel Orientation="Vertical" Margin="0,200,0,0">
                        <Grid>
                            <TextBlock FontWeight="SemiBold" Text="{StaticResource Personal information}" FontSize="14" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,47,0,0"></TextBlock>
                        </Grid>
                        
                        <!--#region THÔNG TIN CÁ NHÂN-->
                        <Grid Margin="0.5,20,0.5,0" VerticalAlignment="Top" Visibility="Visible">
                            <Grid>
                                <Border Effect="{DynamicResource z-depth1}" CornerRadius="15" Background="#FFFFFF"></Border>
                                <Grid Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="300"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                     
                                    <!--row 1-->
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,20,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock FontWeight="SemiBold" Text="Địa chỉ thường trú: " FontSize="16" Foreground="#474747"></TextBlock>
                                            <TextBlock x:Name="txtAddress" Grid.Column="1" FontSize="16" Foreground="#666666"></TextBlock>
                                        </Grid>

                                        <Grid x:Name="gridTbAddress" Grid.Column="0" Height="36" VerticalAlignment="Top" Margin="35,49,0,20" Visibility="Collapsed">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="546*"></ColumnDefinition>
                                                <ColumnDefinition Width="294*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="tbAddress" Text="{Binding Path=Text, ElementName=txtAddress, Mode=OneWay}" BorderThickness="0" FontSize="16" Padding="9,0,0,0" VerticalAlignment="Center"></TextBox>
                                            <Border CornerRadius="8" BorderBrush="#474747" BorderThickness="0.5">
                                            </Border>
                                        </Grid>

                                        <Rectangle Height="1" VerticalAlignment="Bottom" Stroke="{StaticResource #CCCCCC}" StrokeDashArray="2,4" StrokeThickness="1"></Rectangle>
                                    </Grid>
                                     
                                    <Grid Grid.Column="1" Grid.Row="0" >
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock FontWeight="SemiBold" Text="Giới tính: " FontSize="16" Foreground="#474747"></TextBlock>
                                            <TextBlock Grid.Column="1" x:Name="txtSex" FontSize="16" Foreground="#666666"></TextBlock>
                                        </Grid>

                                        <Grid x:Name="gridTbSex" Grid.Column="1" Width="267" Height="36" Margin="0,49,0,20" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed">
                                            <Border CornerRadius="8" BorderBrush="#474747" BorderThickness="0.5">
                                                <Grid>
                                                    <Path Cursor="Hand" Data="{StaticResource icon_explandmore}" Fill="{StaticResource #474747}" Opacity="0.24" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0"></Path>
                                                    <ComboBox x:Name="cbxGender" DisplayMemberPath="Value" SelectedValuePath="Key" Cursor="Hand" VerticalContentAlignment="Center" Padding="10,0,10,0" VerticalAlignment="Center" Height="36" BorderBrush="{x:Null}">
                                                    </ComboBox>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                        <Rectangle Height="1" VerticalAlignment="Bottom" Stroke="{StaticResource #CCCCCC}" StrokeDashArray="2,4" StrokeThickness="1"></Rectangle>
                                    </Grid>

                                    <!--row 2-->
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,20,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock FontWeight="SemiBold" Text="Email: " FontSize="16" Foreground="#474747"></TextBlock>
                                            <TextBlock x:Name="txtEmail" Grid.Column="1" FontSize="16" Foreground="#666666"></TextBlock>
                                        </Grid>

                                        <Grid Visibility="Collapsed" x:Name="gridTbEmail" Grid.Column="0" Height="36" VerticalAlignment="Top" Margin="35,49,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="546*"></ColumnDefinition>
                                                <ColumnDefinition Width="294*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBox IsReadOnly="True" Text="{Binding Path=Text, ElementName=txtEmail, Mode=OneWay}" BorderThickness="0" FontSize="16" Padding="9,0,0,0" VerticalAlignment="Center"></TextBox>
                                            <Border CornerRadius="8" BorderBrush="#474747" BorderThickness="0.5">
                                            </Border>
                                        </Grid>

                                        <Rectangle Height="1" VerticalAlignment="Bottom" Stroke="{StaticResource #CCCCCC}" StrokeDashArray="2,4" StrokeThickness="1"></Rectangle>
                                    </Grid>

                                    <Grid Grid.Column="1" Grid.Row="1" >
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock FontWeight="SemiBold" Text="Điện thoại: " FontSize="16" Foreground="#474747"></TextBlock>
                                            <TextBlock x:Name="txtPhoneNumber" Grid.Column="1" FontSize="16" Foreground="#666666"></TextBlock>
                                        </Grid>

                                        <Grid Visibility="Collapsed" x:Name="gridTbPhoneNumber" Grid.Column="1" Width="267" Height="36" Margin="0,49,0,20" HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <TextBox x:Name="tbPhone" PreviewTextInput="txtPhone_PreviewTextInput" Text="{Binding Path=Text, ElementName=txtPhoneNumber, Mode=OneWay}" FontSize="16" Padding="9,0,0,0" BorderThickness="0" Grid.ColumnSpan="2" VerticalAlignment="Center"></TextBox>
                                            <Border CornerRadius="8" BorderBrush="#474747" BorderThickness="0.5"/>
                                        </Grid>

                                        <Rectangle Height="1" VerticalAlignment="Bottom" Stroke="{StaticResource #CCCCCC}" StrokeDashArray="2,4" StrokeThickness="1"></Rectangle>
                                    </Grid>

                                    <!--row 3-->
                                    <Grid Grid.Row="2" Grid.Column="0">
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,20,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock FontWeight="SemiBold" Text="Tình trạng hôn nhân: " FontSize="16" Foreground="#474747"></TextBlock>
                                            <TextBlock x:Name="txtMaritalStatus"  Grid.Column="1"  FontSize="16" Foreground="#666666"></TextBlock>
                                        </Grid>

                                        <Grid Visibility="Collapsed" x:Name="gridTbMaritalStatus" Grid.Column="0" Height="36" VerticalAlignment="Top" Margin="35,49,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="546*"></ColumnDefinition>
                                                <ColumnDefinition Width="294*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Border CornerRadius="8" BorderBrush="#474747" BorderThickness="0.5">
                                                <Grid>
                                                    <Path Cursor="Hand" Data="{StaticResource icon_explandmore}" Fill="{StaticResource #474747}" Opacity="0.24" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0"></Path>
                                                    <ComboBox x:Name="cbxMarried" DisplayMemberPath="Value" SelectedValuePath="Key" Cursor="Hand" VerticalContentAlignment="Center" Padding="10,0,10,0" VerticalAlignment="Center" Height="36" BorderBrush="{x:Null}">
                                                    </ComboBox>
                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <Rectangle Height="1" VerticalAlignment="Bottom" Stroke="{StaticResource #CCCCCC}" StrokeDashArray="2,4" StrokeThickness="1"></Rectangle>
                                    </Grid>

                                    <Grid Grid.Column="1" Grid.Row="2" >
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock FontWeight="SemiBold" Text="Ngày bắt đầu làm việc: " FontSize="16" Foreground="#474747"></TextBlock>
                                            <TextBlock x:Name="txtDateStartWork" Grid.Column="1" FontSize="16" Foreground="#666666"></TextBlock>
                                        </Grid>

                                        <Grid Visibility="Collapsed" x:Name="gridTbDateStartWork" Grid.Column="1" Width="267" Height="36" Margin="0,49,0,20" HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <TextBox IsReadOnly="True" Text="{Binding Path=Text, ElementName=txtDateStartWork, Mode=OneWay}" FontSize="16" Padding="9,0,0,0" BorderThickness="0" Grid.ColumnSpan="2" VerticalAlignment="Center"></TextBox>
                                            <Border CornerRadius="8" BorderBrush="#474747" BorderThickness="0.5"/>
                                        </Grid>

                                        <Rectangle Height="1" VerticalAlignment="Bottom" Stroke="{StaticResource #CCCCCC}" StrokeDashArray="2,4" StrokeThickness="1"></Rectangle>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>

                        <Grid x:Name="gridBtnPersonalInfo" Height="32" Width="330" Margin="0,50,0,0" Visibility="Collapsed">
                            <Grid Width="153" HorizontalAlignment="Left">
                                <Border CornerRadius="8" Background="#CCCCCC"></Border>
                                <TextBlock Text="Quay lại" FontSize="14" Foreground="#4C5BD4" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <Grid Cursor="Hand" Background="Transparent" MouseLeftButtonDown="ClickBack"></Grid>
                            </Grid>
                            <Grid Width="153" HorizontalAlignment="Right">
                                <Border CornerRadius="8" Background="#4C5BD4"></Border>
                                <TextBlock Text="Lưu thay đổi" FontSize="14" Foreground="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                <Grid Cursor="Hand" Background="Transparent" MouseLeftButtonDown="ClickUpdate"></Grid>
                            </Grid>
                        </Grid>
                        
                        <!--#endregion-->

                        <!--<Canvas Margin="0,20,0,0">
                            <Line X1="0" Y1="0" X2="1500" Y2="0" StrokeThickness="1" Stroke="#CCCCCC"/>
