                                            </Grid.ColumnDefinitions>
                                            <TextBox BorderThickness="0" FontSize="16" Padding="9,0,0,0" VerticalAlignment="Center"></TextBox>
                                            <Border CornerRadius="8" BorderBrush="#474747" BorderThickness="0.5">
