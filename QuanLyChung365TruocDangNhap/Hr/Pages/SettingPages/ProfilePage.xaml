                                        </Grid>

                                        <Canvas Margin="0,0,0,0" VerticalAlignment="Bottom">
                                            <Line X1="0" Y1="0" X2="1500" Y2="0" StrokeThickness="1" Stroke="#CCCCCC" StrokeDashArray="2,4"/>
                                        </Canvas>
                                    </Grid>

                                    <Grid Grid.Column="1" Grid.Row="1" Width="Auto">
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock FontWeight="SemiBold" Text="Quan hệ với bản thân: " FontSize="16" Foreground="#474747"></TextBlock>
                                        </Grid>

                                        <Grid Grid.Column="1" Width="267" Height="36" Margin="0,49,35,20" HorizontalAlignment="Right" VerticalAlignment="Top">
                                            <TextBox FontSize="16" Padding="9,0,0,0" BorderThickness="0" Grid.ColumnSpan="2" VerticalAlignment="Center"></TextBox>
                                            <Border CornerRadius="8" BorderBrush="#474747" BorderThickness="0.5"/>
                                        </Grid>
                                    </Grid>

