                            <Grid Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Center" Height="19" MouseLeftButtonDown="btnAddPersonal_MouseLeftButtonDown">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Width="15" Height="15" Margin="0,0,8,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Width="15" Height="15" Fill="#4C5BD4" HorizontalAlignment="Center" VerticalAlignment="Center"></Ellipse>
                                    <Path Data="{StaticResource icon_plus}" Fill="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"></Path>
                                </Grid>
                                <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Thêm người phụ thuộc" FontSize="16" LineHeight="19" Foreground="#4C5BD4" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                </Grid>
                            </Grid>
                        </Grid>

