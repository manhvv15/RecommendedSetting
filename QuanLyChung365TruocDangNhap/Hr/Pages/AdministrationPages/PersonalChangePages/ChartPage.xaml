                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition MaxWidth="50"></ColumnDefinition>
                    <ColumnDefinition Width="*" MinWidth="290"></ColumnDefinition>
