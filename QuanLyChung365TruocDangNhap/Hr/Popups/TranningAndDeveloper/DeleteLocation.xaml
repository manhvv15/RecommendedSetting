<UserControl x:Class="QuanLyChung365TruocDangNhap.Hr.Popups.TranningAndDeveloper.DeleteLocation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.Hr.Popups.TranningAndDeveloper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="220" Width="736" VerticalAlignment="Top">
        <Border CornerRadius="8" Background="{StaticResource #FFFFFF}"></Border>
        <Grid Height="36" VerticalAlignment="Top">
            <Border CornerRadius="8,8,0,0" Background="{StaticResource #4C5BD4}"></Border>
            <TextBlock Text="XÓA VỊ TRÍ CÔNG VIỆC" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontSize="14" FontFamily="Roboto" FontStyle="Normal"></TextBlock>
        </Grid>
        <Grid Height="72" Width="640" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,55,0,0">
            <TextBlock Text="Bạn có chắc muốn xóa vị trí" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" HorizontalAlignment="Left"></TextBlock>
            <TextBlock Text='""' x:Name="txtName" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" HorizontalAlignment="Left" FontWeight="DemiBold" Margin="175,0,0,0"></TextBlock>
            <TextBlock Text='Tất cả nội dung vị trí sẽ được lưu trữ ở' FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" VerticalAlignment="Center" HorizontalAlignment="Left" ></TextBlock>
            <TextBlock Text='"DỮ LIỆU ĐÃ XÓA GẦN ĐÂY"' FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" Margin="20,0,0,0"></TextBlock>
            <TextBlock Text='trong thời gian 5 ngày trước khi bị ' FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="xóa vĩnh viễn." FontSize="14" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBlock>
        </Grid>
        <Border Height="36" Width="100" CornerRadius="8"  Background="#BDBDBD" Margin="0,0,152,36" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="Hand" MouseLeftButtonDown="CancelPopup">
            <TextBlock Text="Hủy" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
        </Border>
        <Border Height="36" Width="100" CornerRadius="8" Background="#EB5757" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,36,36" Cursor="Hand" MouseLeftButtonDown="RemoveLocation">
            <TextBlock Text="Xóa" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
        </Border>
    </Grid>
</UserControl>
