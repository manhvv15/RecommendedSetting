             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.Hr.Popups.OrganizationalChartPopup"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="700" Height="100" VerticalAlignment="Top" Margin="0,50,0,0">
        <Border Background="{StaticResource #4C5BD4}" Height="50" VerticalAlignment="Top" CornerRadius="8,8,0,0">
            <TextBlock Text="CHI TIẾT MÔ TẢ PHÒNG BAN" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"></TextBlock>
        </Border>
        <Border Background="{StaticResource #FFFFFF}" Height="50" VerticalAlignment="Bottom" CornerRadius="0,0,8,8">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="Chưa cập nhật" FontSize="12" Foreground="#474747" Margin="10,0,0,0" FontWeight="DemiBold"></TextBlock>
        </Border>
    </Grid>
</UserControl>
