             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.Hr.Popups.OrganizationalChartPopup.RightToUse"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="220" Width="736" Background="#ffffff" VerticalAlignment="Top">
        <Grid Height="36" VerticalAlignment="Top" Background="#4C5BD4">
            <TextBlock Text="XÓA MẪU CHỮ KÝ" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontSize="16" FontFamily="Roboto" FontStyle="Normal"></TextBlock>
        </Grid>
        <Grid Height="72" Width="625" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,55,0,0">
            <TextBlock FontWeight="DemiBold" Text="Bạn có chắc muốn xóa mẫu chữ ký của nhân viên này hay không ?" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" HorizontalAlignment="Left"></TextBlock>
            <TextBlock FontWeight="DemiBold" Text='Tất cả nội dung quy trình sẽ được lưu trữ ở "DỮ LIỆU ĐÃ XÓA GẦN ĐÂY" trong thời gian 5 ngày trước khi bị xóa vĩnh viễn' TextWrapping="Wrap" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" VerticalAlignment="Center" HorizontalAlignment="Left" ></TextBlock>
        </Grid>
        <Border Height="36" Width="100" CornerRadius="8" Cursor="Hand" MouseLeftButtonDown="CancelPopup" Background="#BDBDBD" Margin="0,0,152,36" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TextBlock Text="Hủy" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
        </Border>
        <Border Height="36" Width="100" Cursor="Hand" MouseLeftButtonDown="DeletePopup"  CornerRadius="8" Background="#EB5757" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,36,36" >
            <TextBlock Text="Xóa" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
        </Border>
    </Grid>
</UserControl>
