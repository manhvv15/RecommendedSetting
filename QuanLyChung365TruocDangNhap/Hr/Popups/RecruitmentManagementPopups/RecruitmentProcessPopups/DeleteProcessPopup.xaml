<UserControl x:Class="QuanLyChung365TruocDangNhap.Hr.Popups.RecruitmentManagementPopups.RecruitmentProcessPopups.DeleteProcessPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366">
    <Grid Height="220" Width="736" VerticalAlignment="Top">
        <Border CornerRadius="8" Background="{StaticResource #FFFFFF}"></Border>
        <Grid Height="36" VerticalAlignment="Top">
            <Border CornerRadius="8,8,0,0" Background="{StaticResource #4C5BD4}"></Border>
            <TextBlock Text="XÓA QUY TRÌNH TUYỂN DỤNG" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontSize="14" FontFamily="Roboto" FontStyle="Normal"></TextBlock>
        </Grid>
        <Grid Height="72" Width="660" HorizontalAlignment="Center" Margin="36,55,40,93">
            <TextBlock Text="Bạn có chắc muốn quy trình " FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747"></TextBlock>
            <TextBlock x:Name="tbName" Margin="175,0,0,0" FontSize="14" FontFamily="Roboto" FontStyle="Normal" FontWeight="DemiBold"></TextBlock>
            <TextBlock Text="Tất cả nội dung quy trình sẽ được lưu ở " Margin="0,20,0,0"  FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747"></TextBlock>
            <TextBlock Text='"DỮ LIỆU ĐÃ XÓA GẦN ĐÂY"' Margin="248,20,0,0" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" FontWeight="DemiBold"></TextBlock>
            <TextBlock Text="trong thời gian 5 ngày trước khi bị " Margin="438,20,0,0" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747"></TextBlock>
            <TextBlock Text="xóa vĩnh viễn." Margin="0,40,0,0" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747"></TextBlock>
        </Grid>
        <Grid Height="36" Width="100" Margin="484,148,152,36">
            <Border CornerRadius="8"  Background="#BDBDBD" ></Border>
            <TextBlock Text="Hủy" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
            <Grid Cursor="Hand" Background="Transparent" MouseLeftButtonDown="CancelPopup"></Grid>
        </Grid>
        <Grid Height="36" Width="100" Margin="600,148,36,36">
            <Border CornerRadius="8" Background="#EB5757"></Border>
            <TextBlock Text="Xóa" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
            <Grid Cursor="Hand" Background="Transparent" MouseLeftButtonDown="DeleteProcess"></Grid>
        </Grid>
    </Grid>
</UserControl>
