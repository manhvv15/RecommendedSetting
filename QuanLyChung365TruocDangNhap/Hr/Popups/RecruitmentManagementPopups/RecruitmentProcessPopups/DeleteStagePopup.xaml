<UserControl x:Class="QuanLyChung365TruocDangNhap.Hr.Popups.RecruitmentManagementPopups.RecruitmentProcessPopups.DeleteStagePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366">
    <Grid Height="228" Width="736" VerticalAlignment="Top">
        <Border CornerRadius="8" Background="{StaticResource #FFFFFF}"></Border>
        <Grid Height="36" VerticalAlignment="Top">
            <Border CornerRadius="8,8,0,0" Background="{StaticResource #4C5BD4}"></Border>
            <TextBlock Text="XÓA GIAI ĐOẠN" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontSize="14" FontFamily="Roboto" FontStyle="Normal"></TextBlock>
        </Grid>
        <Grid Height="72" Width="660" HorizontalAlignment="Center" Margin="36,59,40,97">
            <TextBlock Text="Bạn có chắc muốn xóa giai đoạn " FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747"></TextBlock>
            <TextBlock x:Name="tbname" Margin="207,0,0,0" FontSize="14" FontFamily="Roboto" FontStyle="Normal" FontWeight="DemiBold"></TextBlock>
            <TextBlock Text="Tất cả nội dung giai đoạn được lưu trữ ở " Margin="0,20,0,0"  FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747"></TextBlock>
            <TextBlock Text='"DỮ LIỆU ĐÃ XÓA GẦN ĐÂY"' Margin="252,20,0,0" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" FontWeight="DemiBold"></TextBlock>
            <TextBlock Text="trong thời gian 5 ngày trước khi bị " Margin="438,20,0,0" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747"></TextBlock>
            <TextBlock Text="xóa vĩnh viễn." Margin="0,40,0,0" FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747"></TextBlock>
        </Grid>
        <Border Height="36" Width="100" CornerRadius="8"  Background="#BDBDBD" Margin="484,156,152,36">
            <Grid>
                <TextBlock Text="Hủy" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
                <Grid Cursor="Hand" Background="Transparent" MouseLeftButtonDown="CancelPopup"></Grid>
            </Grid>
        </Border>
        <Border Height="36" Width="100" CornerRadius="8" Background="#EB5757" Margin="600,156,36,36">
            <Grid>
                <TextBlock Text="Xóa" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
                <Grid Cursor="Hand" Background="Transparent" MouseLeftButtonDown="DeleteProcess"></Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
