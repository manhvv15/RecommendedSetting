<UserControl x:Class="QuanLyChung365TruocDangNhap.Hr.Popups.AdministrationPopups.EmployeePolicy.DeleteEmployeePolicy"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.Hr.Popups.AdministrationPopups.Regulation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="220" Width="736" VerticalAlignment="Top">
        <Border CornerRadius="8" Background="{StaticResource #FFFFFF}"></Border>
        <Grid Height="36" VerticalAlignment="Top">
            <Border CornerRadius="8,8,0,0" Background="{StaticResource #4C5BD4}"></Border>
            <TextBlock Text="XÓA CHÍNH SÁCH" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontSize="14" FontFamily="Roboto" FontStyle="Normal"></TextBlock>
        </Grid>
        <Grid Height="72" Width="625" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,79,0,0">
            <TextBlock Text="Bạn có muốn xóa chính sách  " FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" HorizontalAlignment="Left"></TextBlock>
            <TextBlock x:Name="tbName"  FontSize="14" FontFamily="Roboto" FontStyle="Normal" HorizontalAlignment="Left" Foreground="#474747" FontWeight="SemiBold" Margin="180,0,0,0"></TextBlock>
            <TextBlock Text='Tất cả nội dung nhóm quy định sẽ được lưu trữ ở' FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" VerticalAlignment="Center" HorizontalAlignment="Left" ></TextBlock>
            <TextBlock Text='"DỮ LIỆU ĐÃ XÓA GẦN ĐÂY"' FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" Margin="165,0,0,0"></TextBlock>
            <TextBlock Text='trong thời gian 5 ngày' FontSize="14" FontFamily="Roboto" FontStyle="Normal" Foreground="#474747" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="trước khi bị xóa vĩnh viễn." FontSize="14" Foreground="#474747" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBlock>
        </Grid>
        <Border Height="36" Width="100" CornerRadius="8"  Background="#BDBDBD" Margin="0,0,152,36" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Grid>
                <TextBlock Text="Hủy" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
                <Grid Background="Transparent" Cursor="Hand" MouseLeftButtonDown="CancelPopup"></Grid>
            </Grid>
        </Border>
        <Border Height="36" Width="100" CornerRadius="8" Background="#EB5757" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,36,36" >
            <Grid>
                <TextBlock Text="Xóa" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontFamily="Roboto" FontSize="14" FontStyle="Normal"></TextBlock>
                <Grid Background="Transparent" Cursor="Hand" MouseLeftButtonDown="DeleteRegulation"></Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
