             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.RecommendSetting"
             mc:Ignorable="d" 
             Width="1000">
    <StackPanel Background="WhiteSmoke">
        <DockPanel HorizontalAlignment="Center">
            <Border Width="350" BorderThickness="0 0 0 5" BorderBrush="#4C5BD4" HorizontalAlignment="Left" >
                <TextBlock Margin="10 7 0 0" Text="Thời gian duyệt đề xuất có kế hoạch" FontSize="20" FontWeight="DemiBold" Foreground="#4C5BD4"/>
