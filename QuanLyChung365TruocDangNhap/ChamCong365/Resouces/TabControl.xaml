                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TabItem,Mode=FindAncestor},Path=Tag,StringFormat={}({0})}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
