            <Grid Background="{DynamicResource #FFFFFF}">
                <Path Data="{DynamicResource iconThanhcong}" Fill="{DynamicResource #82CE34}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            <TextBlock Margin="0 13 0 17" Text="Cập nhật thông tin thành công !" FontSize="16" Foreground="{DynamicResource #363636}" HorizontalAlignment="Center"/>
            <Border CornerRadius="3" BorderThickness="0" Background="{DynamicResource #4C5BD4}" Width="387" Height="48">
                <TextBlock Text="{DynamicResource textXacNhan}" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="18" Foreground="{DynamicResource #FFFFFF}" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Grid>
    </Border>
</Page>
