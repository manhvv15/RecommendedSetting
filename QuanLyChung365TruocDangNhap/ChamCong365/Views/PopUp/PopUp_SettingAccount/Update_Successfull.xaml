<Page x:Class="QuanLyChung365TruocDangNhap.ChamCong365.Views.PopUp.PopUp_SettingAccount.Update_Successfull"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.ChamCong365.Views.PopUp.PopUp_SettingAccount"
      mc:Ignorable="d" 
      d:DesignHeight="294" d:DesignWidth="527"
      Title="Update_Successfull">
    <Border CornerRadius="10" Background="{DynamicResource #FFFFFF}">
    <Grid >
        <Path Margin="0 14 22 0" Data="{DynamicResource iconClose}" Fill="{DynamicResource #FFFFFF}" HorizontalAlignment="Right" VerticalAlignment="Top"/>
