                                    <TextBlock Text="Xóa thành công" VerticalAlignment="Center" Margin="15 0 0 0" Foreground="{DynamicResource #474747}" FontWeight="Bold" FontSize="24"/>
                                </DockPanel>
                                <Border Background="{DynamicResource #4C5BD4}" Cursor="Hand" MouseLeftButtonDown="XacNhan" HorizontalAlignment="Center" Margin="0 20" CornerRadius="10">
                                    <TextBlock Margin="20 10" Text="Xác nhận" Foreground="{DynamicResource #FFFFFF}" FontWeight="Bold" FontSize="16"></TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid Background="Transparent" Visibility="{Binding ElementName=popup1,Path=Visibility}" MouseLeftButtonDown="ClosePopup"></Grid>
                    <Grid Visibility="Collapsed" x:Name="popup1">
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource textHuongDan}"></TabItem>
        </TabControl>
    </Grid>
</Page>
